@using Duplex.Core.Models.Event
@model EditEventModel
@{
    ViewBag.Title = "Edit Event";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="SubmitEdit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Event Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EntryCost" class="form-label">Cost to enter event (DC)</label>
                <input asp-for="@Model.EntryCost" class="form-control" aria-required="true" />
                <span asp-validation-for="EntryCost" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Event Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TeamSize" class="form-label">Team Size</label>
                <input type="number" asp-for="@Model.TeamSize" class="form-control" aria-required="true" min="1" max="5"/>
                <span asp-validation-for="TeamSize" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save Changes" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
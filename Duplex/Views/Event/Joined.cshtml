@using Duplex.Core.Models.Event
@model IEnumerable<JoinedEventModel>

@{
    ViewData["Title"] = "Joined Events";
}

<div class="text-center">
    @if (Model.Count() > 0)
    {
        <p class="h3"> @Model.FirstOrDefault()?.UserName's Events</p>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var ev in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@ev.EventImageUrl" class="card-img-top height-100" alt="Event Image">
                        <div class="card-body">
                            <h5 class="card-title">@ev.EventName</h5>
                            <span>
                                <img class="d-inline" src="/static/pics/coin.png" style="max-width:20px; padding-bottom:1px;">
                                <strong class="card-subtitle d-inline">@ev.EntryCost</strong>
                            </span>
                            <span>
                                <img class="d-inline" src="/static/pics/team-size.png" style="max-width:20px; padding-bottom:1px;">
                                <strong class="card-subtitle d-inline">@ev.TeamSize</strong>
                            </span>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Created on @ev.CreatedOnUTC.ToShortDateString()</small>
                        </div>
                        <span class="buttons mt-1 mb-1">
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@ev.EventId"
                       class="btn btn-primary">Details</a>
                        </span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="h3">There is nothing here...</p>
        <p class="h3">Head to <a asp-action="All" asp-controller="Event" class="text-decoration-none">Events</a> and join one!</p>
    }
</div>
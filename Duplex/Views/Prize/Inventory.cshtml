@using Duplex.Core.Models.Prize
@model IEnumerable<InventoryPrizeViewModel>

@{
    ViewData["Title"] = "Inventory";
}

<div class="text-center">
    @if (Model.Count() > 0)
    {
        <p class="h3"> @Model.FirstOrDefault()?.UserName's Prizes</p>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var prize in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@prize.ImageUrl" class="card-img-top height-100" alt="Event Image">
                        <div class="card-body">
                            <h5 class="card-title">@prize.Name</h5>
                            <span>
                                <img class="d-inline" src="/static/pics/coin.png" style="max-width:20px; padding-bottom:1px;">
                                <strong class="card-subtitle d-inline">@prize.Cost</strong>
                            </span>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Acquired on @prize.AcquiredOnUTC?.ToShortDateString()</small>
                        </div>
                        <span class="buttons mt-1 mb-1">
                            <a asp-controller="Prize" asp-action="Details" asp-route-id="@prize.PrizeId" class="btn btn-primary">Details</a>
                        </span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="h3">There is nothing here...</p>
        <p class="h3">Head to <a asp-action="All" asp-controller="Prize" class="text-decoration-none">Prizes</a> and buy one!</p>
    }
</div>
@using Duplex.Core.Models.Administration.Rank
@model SetRankModel

@{
    ViewData["Title"] = "Set Rank";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserId">User Id</label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserId" />
                <span asp-validation-for="@Model.UserId" class="text-danger"></span>
            </div>

            <div class="text-center mb-3">
                <label asp-for="@Model.RankId" class="form-label">Rank</label>
                <select asp-for="@Model.RankId" class="form-control">
                    @foreach (var rank in Model.Ranks)
                    {
                        <option value="@rank.Id">@rank.Name</option>
                    }
                </select>
                <span asp-validation-for="RankId" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Set Rank</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}